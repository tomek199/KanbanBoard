.col-md-2{id: "list_" + list.id.to_s}
  .panel.panel-primary
    .panel-heading
      %h2.panel-title
        - if @owner == 1
          = best_in_place list, :name, type: :input
        - else 
          = list.name
        - if @owner == 1
          .btn-group.pull-right
            %span.glyphicon.glyphicon-circle-arrow-down.dropdown-toggle{"data-toggle" => "dropdown"}
            %ul.dropdown-menu{role: "menu"}
              %li
                = link_to "Delete", delete_list_path(list), remote: true
          
    .panel-body
      