%nav.navbar.navbar-inverse{role: "navigator"}
  .container-fluid
    .navbar-header
      %a.navbar-brand{href: "#"} KanbanBoard
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to boards_path do 
            %span.glyphicon.glyphicon-home 
            Home
        %li.dropdown
          %a.dropdown-toggle{href: "#", "data-toggle" => "dropdown"} 
            %span.glyphicon.glyphicon-th-large
            Boards
            %b.caret
          %ul.dropdown-menu
            %li 
              - @boards.each do |board|
                = link_to board.name, board
      %form.navbar-form.navbar-left{role: "search"}
        .form-group
          %input.form-control{placeholder: "Search", type: "text"}
          %button.btn.btn-default{type: "submit"}
            %span.glyphicon.glyphicon-search
      .btn-group.navbar-btn.navbar-right
        %button.btn.btn-info.dropdown-toggle{type: "button", "data-toggle" => "dropdown"}
          = current_user.email if user_signed_in?
          %span.caret
        %ul.dropdown-menu{role: "menu"}
          %li
            = link_to "Sign out", destroy_user_session_path, method: "delete"
      %p.navbar-text.navbar-right 
        %span.glyphicon.glyphicon-user
        Signed in as &nbsp;