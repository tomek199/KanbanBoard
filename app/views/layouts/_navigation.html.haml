%nav.navbar.navbar-inverse.navbar-static-top{role: "navigation"}
  .container-fluid
    .navbar-header
      = link_to "KanbanBoard", boards_path, class: "navbar-brand"
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to boards_path do 
            %span.glyphicon.glyphicon-home 
            Home
        %li.dropdown
          %a.dropdown-toggle{href: "#", "data-toggle" => "dropdown"} 
            %span.glyphicon.glyphicon-th-large
            Boards
            %b.caret
          %ul.dropdown-menu
            %li 
              - @all_boards.each do |board|
                = link_to board.name, board_lists_path(board)
      %form.navbar-form.navbar-left{role: "search"}
        .form-group
          %input.form-control{placeholder: "Search", type: "text"}
          %button.btn.btn-default{type: "submit"}
            %span.glyphicon.glyphicon-search
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{href: "#", "data-toggle" => "dropdown"}
            %span.glyphicon.glyphicon-user
            = current_user.email if user_signed_in?          
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to "sign out", destroy_user_session_path, method: :delete
      %p.navbar-text.navbar-right Signed in as