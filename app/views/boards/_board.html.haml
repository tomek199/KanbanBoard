.col-sm-4{id: "board_" + board.id.to_s}
  .thumbnail
    .caption
      %h3= best_in_place board, :name, type: :input
      %p= best_in_place board, :description, type: :textarea
      .btn-group
        = link_to board_lists_path(board), class: "btn btn-primary" do 
          %span.glyphicon.glyphicon-search
          Show
        .btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown"}
          %span.glyphicon.glyphicon-cog
          %span.caret
        %ul.dropdown-menu{role: "menu"}
          %li
            = link_to "Delete", board_delete_path(board), remote: true  
      